{
    "version": 2,
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.5.3" }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://project-shop-laravel-server-main.vercel.app",

        "FRONTEND_URL": "https://project-shop-laravel-client.vercel.app",
        "SANCTUM_STATEFUL_DOMAINS": "project-shop-laravel-client.vercel.app",
        "SESSION_DOMAIN": "project-shop-laravel-client.vercel.app",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",

        "FILESYSTEM_DISK": "public",
        "CACHE_DRIVER": "database",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    }
}
